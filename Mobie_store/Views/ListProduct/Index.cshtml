@using Mobie_store.Models.Entity
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts/_Home.cshtml";
}
@{ 
    var product = (List<product>)ViewBag.product;

}
<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shop</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @foreach (var item in product)
            {
                <div class="col-md-3 col-sm-6"style="text-align:center">
                    <div class="single-shop-product">
                        <div class="product-upper">
                            <img src="" alt="">
                        </div>

                        @{
                            foreach (var item1 in Model)
                            {
                                if (item1.product_id == item.id)
                                {
                                    <img style="width:400px;height:250px" src="@item1.url" alt="Alternate Text" />
                                    break;
                                }
                            }
                        }
                        <h2><a style="text-align:center" href="@Url.Action("Index","Detail", new {@a = item.id })">@item.name</a></h2>
                        <div class="product-carousel-price">
                            <ins>@item.price VND</ins> <del></del>
                        </div>

                        <div class="product-option-shop">
                            <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/canvas/shop/?add-to-cart=70">Add to cart</a>
                        </div>
                    </div>
                </div>
            }

        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="product-pagination text-center">
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">«</span>
                                </a>
                            </li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">»</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

